<com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmCodeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarmCodeView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/codeTitle"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        tools:text="Please enter the new alarm code." />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <include
        layout="@layout/view_keypad"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/pinCode1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_radio_button_unchecked_black_32dp"
            android:tint="@color/dark_gray" />


        <ImageView
            android:id="@+id/pinCode2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_radio_button_unchecked_black_32dp"
            android:tint="@color/dark_gray" />

        <ImageView
            android:id="@+id/pinCode3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_radio_button_unchecked_black_32dp"
            android:tint="@color/dark_gray" />

        <ImageView
            android:id="@+id/pinCode4"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_radio_button_unchecked_black_32dp"
            android:tint="@color/dark_gray" />

    </LinearLayout>


</com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmCodeView>